.pop-bg{    /*弹窗弹出后*/
  position: fixed;
  top:0;
  left: 0;
  background-color: rgb(0,0,0,0.5);
  width: 100%;
  height: 100%;
}
.pop-block1{ /*余额充值*/
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  position: fixed;
  width: 100%;
  height: 30%;
  bottom: 0;
  margin: 0;
  background-color: #f6f6f6;
  z-index: 999;
}
